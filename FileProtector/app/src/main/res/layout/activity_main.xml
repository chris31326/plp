<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.xin.fileprotector.MainActivity">

    <GridLayout
        android:id="@+id/gridLayoutMainPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:columnCount="2"
        android:rowCount="3"
        android:background="@color/colorBackground">

        <Button
            android:id="@+id/button_photo"
            android:layout_margin="8dp"
            android:background="@color/colorYellow"
            android:textColor="@color/colorTextButton"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Photo"
            android:onClick="onClickFolderPhoto"/>

        <Button
            android:id="@+id/button_audio"
            android:layout_margin="8dp"
            android:background="@color/colorLightGrey"
            android:textColor="@color/colorTextButton"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_row="0"
            android:text="Audio" />

        <Button
            android:id="@+id/button_video"
            android:layout_margin="8dp"
            android:background="@color/colorLightGrey"
            android:textColor="@color/colorTextButton"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:text="Video" />

        <Button
            android:id="@+id/button_documents"
            android:layout_margin="8dp"
            android:background="@color/colorYellow"
            android:textColor="@color/colorTextButton"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_row="1"
            android:text="Documents" />

        <Button
            android:id="@+id/button_others"
            android:layout_margin="8dp"
            android:background="@color/colorYellow"
            android:textColor="@color/colorTextButton"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Others" />

        <Button
            android:id="@+id/button_decrypted"
            android:layout_margin="8dp"
            android:background="@color/colorLightGrey"
            android:textColor="@color/colorTextButton"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_row="2"
            android:text="Decrypted" />
    </GridLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/colorTopBar"
        android:tint="@color/colorPrimary"
        app:srcCompat="@android:drawable/ic_input_add"
        android:onClick="onClickViewAllFiles"/>

</FrameLayout>
